<table id="gs-group-list-email-html-body"
       xmlns:tal="http://xml.zope.org/namespaces/tal"
       align="center" border="0" cellpadding="0" cellspacing="0"
       width="100%">
  <tr>
    <td tal:content="structure view/htmlBody">
      The body of the post.
    </td>
  </tr>
  <tr tal:condition="view/readMore">
    <td>
      <a tal:attributes="href string:${view/post/url}"
         class="small muted"
         href="#">Rest of post&#8230;</a>
    </td>
  </tr>
</table>
