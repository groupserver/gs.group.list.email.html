<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="context/@@groupserver_email_layout/page">
  <head>
    <title metal:fill-slot="title">Notification:
      <span tal:replace="view/siteInfo/name">Site</span></title>
  </head>
  <body>
    <tal:block metal:fill-slot="preheader"
               tal:condition="not:view/author/anonymous">
      <tal:block content="view/author/name">Someone</tal:block>
      posted to
      <tal:block content="view/groupInfo/name">this group</tal:block>
      on
      <tal:block content="view/siteInfo/name">this site</tal:block>
    </tal:block>
    <div metal:fill-slot="body">
      <p tal:content="view/groupInfo/url">I am an email, honest.</p>
    </div><!--a-page-->
  </body>
</html>
